<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/issue_comments_list_header"
        android:text="@string/comments"
        android:textAppearance="?android:textAppearanceMedium"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip" />

    <TextView
        android:id="@+id/issue_comments_empty_text"
        android:text="@string/no_comments"
        android:textAppearance="?android:textAppearanceSearchResultTitle"
        android:textColor="@color/no_items_found"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dip" />

    <ListView
        android:id="@+id/issue_comments_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
